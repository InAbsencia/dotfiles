#
# ~/.config/sxhkd/sxhkdrc
#
# Authors:
#  InAbsentia <github.com/inabsencia>
#

#
# wm independent hotkeys
#

# terminal emulator
super + Return
    urxvt -e zsh -c "tmux -q has-session && exec tmux attach-session -d || exec tmux new-session -n$USER -s$USER@$HOSTNAME"

super + ctrl + Return
    urxvt

# dmenu(2)?
super + d
    rofi -show run

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# terminal launchers
#

# weechat
super + shift + z
    urxvt -name "weechat" -e zsh -c "weechat"

# ncmpcpp
super + shift + x
    urxvt -name "ncmpcpp" -e zsh -c "ncmpcpp"

# htop
super + shift + c
    urxvt -name "htop" -e zsh -c "htop"

# vpn
super + shift + v
    urxvt -name "vpn" -e zsh -c "~/bin/inabsentiavpn"

# updates
super + shift + b
    urxvt -name "updates" --geometry 93x50 -e zsh -c "~/bin/upg"

# updatelist
super + shift + n
    urxvt -name "listupg" --geometry 93x50 -e zsh -c "~/bin/listupg"

#
# program launchers
#

# i3lock
super + ctrl + x
    ~/bin/lock

# qutebrowser
super + shift + y
	qutebrowser --backend webengine -r default

# steam-native
super + shift + u
    steam-native

# keepassx2
super + shift + i
    keepassx2

#
# bspwm hotkeys
#

# quit bspwm normally
super + shift + Escape
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + shift + t
	bspc desktop -l next

# rotate windows 90
super + ctrl + comma
    bspc node @/ --rotate 90

# ... ... ... hmm?
super + {comma,period}
	bspc desktop -C {backward, forward}

#
# state/flags
#

# set the window state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# set the window to pseudo_tiled state
super + p
	bspc node -t pseudo_tiled

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }g
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# circulate the leaves of the tree of the focused desktop
super + {c,shift + c}
	bspc node @/ --circulate {forward,backward}

# swap the focused window wih the last window
super + shift + comma
	bspc node -s last

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# custom configured keys
#

# change window gaps
alt + {minus,plus}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# adjust screen backlight
XF86MonBrightness{Up,Down}
	xbacklight {+10,-10}

# adjust master volume
XF86Audio{RaiseVolume,LowerVolume,Mute}
	amixer sset Master {2%+,2%-,toggle}

# screenshot
Print
	scrot -e 'mv $f ~/personal/screenshots'

# mpc/mpd controls
XF86Audio{Next,Play,Prev}
	mpc {next,toggle,prev}

# Reset window_gap value to default (polybar toggle? compton toggle?)
XF86Search
	~/bin/comptontoggle
