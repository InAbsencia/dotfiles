nord9  = #81A1C1
nord10 = #5E81AC
nord11 = #BF616A
nord12 = #D08770
nord13 = #EBCB8B
nord14 = #A3BE8C
nord15 = #B48EAD

## Global settings
[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

## Define the bar
[bar/base]
monitor  = ${env:MONITOR:eDP1}
width    = 1900
height   = 25
offset-x = 10
offset-y = 10

background   = ${colors.nord3}
foreground   = ${colors.nord5}
border-color = ${colors.nord10}

font-0 = Fira Mono For Powerline:style=bold:size=10;2
font-1 = FontAwesome:size=9;1

modules-left   = bspwm cpu cputemp ram downspeed upspeed
modules-center = previous play pause next mpd
modules-right  = volume backlight wifi signal battery clock

border-size         = 2
padding-left        = 0
padding-right       = 0
module-margin-left  = 0
module-margin-right = 0

bottom = false

## bspwm settings
[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode    = false
enable-click   = false
enable-scroll  = false
reverse-scroll = false
fuzzy-match    = false

format-padding = 2

label-focused            = ""
label-focused-background = ${colors.nord3}
label-focused-foreground = ${colors.nord6}
label-focused-padding    = 1

label-focused-occupied = 
label-focused-occupied-background = ${colors.nord3}
label-focused-occupied-foreground = ${colors.nord6}
label-focused-occupied-padding = 1

label-occupied            = ""
label-occupied-background = ${colors.nord3}
label-occupied-foreground = ${colors.nord1}
label-occupied-padding    = 1

label-urgent            = ""
label-urgent-background = ${colors.nord3}
label-urgent-foreground = ${colors.nord13}
label-urgent-padding    = 1

label-focused-urgent = 
label-focused-urgent-background = ${colors.nord3}
label-focused-urgent-foreground = ${colors.nord11}
label-focused-urgent-padding = 1

label-empty            = ""
label-empty-background = ${colors.nord3}
label-empty-foreground = ${colors.nord1}
label-empty-padding    = 1

## CPU load in percentage
[module/cpu]
type     = internal/cpu
label    = "%percentage:2:2:2%%"
internal = 2

format-prefix            = " "
format-prefix-foreground = ${colors.nord6}
format-background        = ${colors.nord3}
format-foreground        = ${colors.nord6}
format-padding           = 2

## CPU temperature
[module/cputemp]
type         = internal/temperature
label        = "%temperature%"
interval     = 2
thermal-zone = 0

format-prefix            = " "
format-prefix-foreground = ${colors.nord6}
format-background        = ${colors.nord3}
format-foreground        = ${colors.nord6}
format-padding           = 2

## RAM used in %
[module/ram]
type     = internal/memory
label    = "%percentage_used:2:2:2%%"
interval = 2

format                   = <label>
format-prefix            = " "
format-prefix-foreground = ${colors.nord6}
format-background        = ${colors.nord3}
format-foreground        = ${colors.nord6}
format-padding           = 2

## WiFi download speed
[module/downspeed]
type      = internal/network
interface = wlp3s0
interval  = 2

label-connected                    = "%downspeed%"
format-connected-prefix            = " "
format-connected-prefix-foreground = ${colors.nord6}
format-connected-foreground        = ${colors.nord6}
format-connected-background        = ${colors.nord3}
format-connected-padding           = 2

label-disconnected                    = "0 KB/s"
format-disconnected-prefix            = " "
format-disconnected-prefix-foreground = ${colors.nord6}
format-disconnected-foreground        = ${colors.nord6}
format-disconnected-background        = ${colors.nord3}
format-disconnected-padding           = 2

## WiFi upload speed
[module/upspeed]
type      = internal/network
