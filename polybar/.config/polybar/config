##
## ~/.config/polybar/config
##
## Authors:
##  Iyyel <github.com/iyyel>
##
## Polybar configuration file.
##

## Colors
[colors]
bg   = ${xrdb:color0}
fg   = ${xrdb:color7}

blk  = ${xrdb:color0}
red  = ${xrdb:color1}
grn  = ${xrdb:color2}
ylw  = ${xrdb:color3}
blu  = ${xrdb:color4}
mag  = ${xrdb:color5}
cyn  = ${xrdb:color6}
wht  = ${xrdb:color7}

bblk = ${xrdb:color8}
bred = ${xrdb:color9}
bgrn = ${xrdb:color10}
bylw = ${xrdb:color11}
bblu = ${xrdb:color12}
bmag = ${xrdb:color13}
bcyn = ${xrdb:color14}
bwht = ${xrdb:color15}

## Global settings
[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

## Define the bar
[bar/base]
monitor  = ${env:MONITOR:eDP1}
width    = 100%
height   = 25
offset-x = 0
offset-y = 0

background   = ${colors.bblk}
foreground   = ${colors.fg}
border-color = ${colors.bblk}

font-0 = Fira Mono:style=bold:size=10;2
font-1 = FontAwesome:size=9;1

modules-left   = bspwm cpu cputemp ram
modules-center = previous play pause next mpd
modules-right  = volume backlight wifi signal battery clock

border-size         = 6
padding-left        = 0
padding-right       = 0
module-margin-left  = 1
module-margin-right = 0

bottom = false

## bspwm settings
[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode    = false
enable-click   = false
enable-scroll  = false
reverse-scroll = false
fuzzy-match    = false

format-padding = 0

label-focused            = ""
label-focused-background = ${colors.bg}
label-focused-foreground = ${colors.bwht}
label-focused-padding    = 2

label-occupied            = ""
label-occupied-background = ${colors.bg}
label-occupied-foreground = ${colors.bblk}
label-occupied-padding    = 2

label-urgent            = ""
label-urgent-background = ${colors.bg}
label-urgent-foreground = ${colors.bred}
label-urgent-padding    = 2

label-empty            = ""
label-empty-background = ${colors.bg}
label-empty-foreground = ${colors.bcyn}
label-empty-padding    = 2

## CPU load in percentage
[module/cpu]
type     = internal/cpu
label    = "%percentage:2:2:2%%"
internal = 2

format-prefix     = " "
format-background = ${colors.grn}
format-foreground = ${colors.bg}
format-padding    = 2

## CPU temperature
[module/cputemp]
type         = internal/temperature
label        = "%temperature%"
interval     = 2
thermal-zone = 0

format-prefix     = " "
format-background = ${colors.blu}
format-foreground = ${colors.bg}
format-padding    = 2

## RAM used in %
[module/ram]
type     = internal/memory
label    = "%percentage_used:2:2:2%%"
interval = 2

format            = <label>
format-prefix     = " "
format-background = ${colors.red}
format-foreground = ${colors.bg}
format-padding    = 2

## Previous button for mpd
[module/previous]
type      = internal/mpd
host      = 127.0.0.1
port      = 6600
icon-prev = ""

format-online            = <icon-prev>
format-online-background = ${colors.blu}
format-online-foreground = ${colors.bg}
format-online-padding    = 2

## Play button for mpd
[module/play]
type      = internal/mpd
host      = 127.0.0.1
port      = 6600
icon-play = ""

format-online            = <icon-play>
format-online-background = ${colors.blu}
format-online-foreground = ${colors.bg}
format-online-padding    = 2

## Pause button for mpd
[module/pause]
type       = internal/mpd
host       = 127.0.0.1
port       = 6600
icon-pause = ""

format-online            = <icon-pause>
format-online-background = ${colors.blu}
format-online-foreground = ${colors.bg}
format-online-padding    = 2

## Next button for mpd
[module/next]
type      = internal/mpd
host      = 127.0.0.1
port      = 6600
icon-next = ""

format-online            = <icon-next>
format-online-background = ${colors.blu}
format-online-foreground = ${colors.bg}
format-online-padding    = 2

## Show current artist and song title
[module/mpd]
type     = internal/mpd
host     = 127.0.0.1
port     = 6600
interval = 2

format-online         = <label-song>
format-online-padding = 0

label-song            = " %artist% - %title%"
label-song-maxlen     = 50
label-song-background = ${colors.grn}
label-song-foreground = ${colors.bg}
label-song-padding    = 2

## Show volume in percentage
[module/volume]
type = internal/volume

label-volume             = "%percentage%%"
format-volume            = <label-volume>
format-volume-prefix     = " "
format-volume-background = ${colors.mag}
format-volume-foreground = ${colors.bg}
format-volume-padding    = 2

label-muted             = "Muted"
format-muted            = <label-muted>
format-muted-prefix     = " "
format-muted-background = ${colors.mag}
format-muted-foreground = ${colors.bg}
format-muted-padding    = 2

## Backlight in percentage
[module/backlight]
type          = internal/backlight
label         = "%percentage%%"
card          = intel_backlight
enable-scroll = false

format            = <label>
format-prefix     = " "
format-background = ${colors.ylw}
format-foreground = ${colors.bg}
format-padding    = 2

## Show the connected WiFi network
[module/wifi]
type      = internal/network
interface = wlp3s0
interval  = 2

label-connected                    = "%essid%"
format-connected-prefix            = " "
format-connected-prefix-foreground = ${colors.bg}
format-connected-foreground        = ${colors.bg}
format-connected-background        = ${colors.cyn}
format-connected-padding           = 2

label-disconnected                    = "Disconnected"
format-disconnected-prefix            = " "
format-disconnected-prefix-foreground = ${colors.bg}
format-disconnected-background        = ${colors.red}
format-disconnected-foreground        = ${colors.bg}
format-disconnected-padding           = 2

## Shows the signal for the WiFi currently connected
[module/signal]
type      = internal/network
interface = wlp3s0
interval  = 2

label-connected                    = "%signal%%"
format-connected-prefix            = " "
format-connected-prefix-foreground = ${colors.bg}
format-connected-foreground        = ${colors.bg}
format-connected-background        = ${colors.grn}
format-connected-padding           = 2

label-disconnected                    = "0%"
format-disconnected-prefix            = " "
format-disconnected-prefix-foreground = ${colors.bg}
format-disconnected-background        = ${colors.red}
format-disconnected-foreground        = ${colors.bg}
format-disconnected-padding           = 2

## Show battery percentage
[module/battery]
type          = internal/battery
full-at       = 99
battery       = BAT1
adapter       = AC0
poll-interval = 5

format-charging-prefix     = " "
label-charging             = "%percentage%%"
format-charging-background = ${colors.grn}
format-charging-foreground = ${colors.bg}
format-charging-padding    = 2

format-discharging-prefix     = " "
label-discharging             = "%percentage%%"
format-discharging-background = ${colors.red}
format-discharging-foreground = ${colors.bg}
format-discharging-padding    = 2

format-full-prefix     = " "
label-full             = "%percentage%%"
format-full-background = ${colors.ylw}
format-full-foreground = ${colors.bg}
format-full-padding    = 2

## Show current date and time
[module/clock]
type     = internal/date
date     = "%a %d/%m/%y %H:%M"
interval = 1

format-prefix     = " "
format-background = ${colors.fg}
format-foreground = ${colors.bg}
format-padding    = 2
