## Show current artist and song title
[module/mpd]
type     = internal/mpd
host     = 127.0.0.1
port     = 6600
interval = 2

format-online         = <label-song>
format-online-padding = 0

label-song            = " %artist% - %title%"
label-song-maxlen     = 50
label-song-background = ${colors.nord3}
label-song-foreground = ${colors.nord6}
label-song-padding    = 2

## Show volume in percentage
[module/volume]
type = internal/volume

