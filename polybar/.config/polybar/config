[colors]
bg = ${xrdb:color0}
fg = ${xrdb:color7}

blk = ${xrdb:color0}
red = ${xrdb:color1}
grn = ${xrdb:color2}
ylw = ${xrdb:color3}
blu = ${xrdb:color4}
mag = ${xrdb:color5}
cyn = ${xrdb:color6}
wht = ${xrdb:color7}

bblk = ${xrdb:color8}
bred = ${xrdb:color9}
bgrn = ${xrdb:color10}
bylw = ${xrdb:color11}
bblu = ${xrdb:color12}
bmag = ${xrdb:color13}
bcyn = ${xrdb:color14}
bwht = ${xrdb:color15}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/base]
monitor = ${env:MONITOR:eDP1}
width    = 100%
height   = 25
offset-x = 0
offset-y = 0

background = ${colors.bblk}
foreground = ${colors.fg}
border-color = ${colors.bblk}

font-0 = Iosevka:size=10;2
font-1 = FontAwesome:size=9;1

modules-left   = bspwm cpu cputemp ram
modules-center = previous playpause next mpd
modules-right  = volume backlight wifi signal battery clock

border-size = 6
padding-left        = 0
padding-right       = 0
module-margin-left  = 1
module-margin-right = 0

bottom = false



[module/bspwm]
type = internal/bspwm

pin-workspaces = true
inline-mode = false
enable-click = true
enable-scroll = false
reverse-scroll = false
fuzzy-match = false

format-padding = 0

label-focused = ""
label-focused-background = ${colors.bg}
label-focused-foreground = ${colors.bwht}
label-focused-padding = 2

label-occupied = ""
label-occupied-background = ${colors.bg}
label-occupied-foreground = ${colors.bblk}
label-occupied-padding = 2

label-urgent = ""
label-urgent-background = ${colors.bg}
label-urgent-foreground = ${colors.bred}
label-urgent-padding = 2

label-empty = ""
label-empty-background = ${colors.bg}
label-empty-foreground = ${colors.bcyn}
label-empty-padding = 2



[module/cpu]
type                     = internal/cpu
label                    = "%percentage:2:2:2%%"
label-padding            = 0
format-padding           = 2
format-prefix            = " "

format-background = ${colors.grn}
format-foreground = ${colors.bg}



[module/cputemp]
type = internal/temperature
label = " %temperature%"
interval = 2

thermal-zone = 0

format-background = ${colors.blu}
format-foreground = ${colors.bg}

format-padding = 2



[module/ram]
type     = internal/memory
interval = 2

format           = <label>
format-padding   = 2
label            = "%percentage_used:2:2:2%%"

format-prefix = " "
format-background = ${colors.red}
format-foreground = ${colors.bg}



[module/title]
type = internal/xwindow
label-maxlen = 50
format-padding = 2



[module/previous]
type = custom/text

content = ""
content-background = ${colors.blu}
content-foreground = ${colors.bg}
content-padding = 2

click-left = mpc prev



[module/playpause]
type = custom/text

# exec = sh ~/.config/polybar/playpause.sh

interval = 1
content = ""
label = ""
content-foreground = ${colors.bg}
content-background = ${colors.blu}
content-padding = 2
label-background = ${colors.blu}
label-foreground = ${colors.bg}
label-padding = 0

click-left = mpc toggle



[module/next]
type = custom/text

content = ""

content-background = ${colors.blu}
content-foreground = ${colors.bg}
content-padding = 2

click-left = mpc next



[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

interval = 2

format-online = <label-song>
format-online-padding = 0

label-song = " %title% - %artist%"
label-song-background = ${colors.grn}
label-song-foreground = ${colors.bg}
label-song-maxlen = 50
label-song-padding = 2



[module/volume]
type = internal/volume

format-volume = <label-volume>
format-muted = <label-muted>

label-muted = muted
label-muted-padding = 1

format-volume-prefix = " "
format-muted-prefix  = " "

format-volume-padding = 2
format-muted-padding = 2

format-volume-background = ${colors.mag}
format-muted-background  = ${colors.mag}

format-volume-foreground = ${colors.bg}
format-muted-foreground  = ${colors.bg}



[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = false

format = <label>
format-prefix = ""
format-padding = 1

label = "%percentage%%"
label-padding = 1

format-background = ${colors.ylw}
format-foreground = ${colors.bg}



[module/wifi]
type = internal/network
interface = wlp3s0
interval = 2

label-connected = "%essid%"
format-connected-prefix = " "
format-connected-prefix-padding = 0
format-connected-prefix-foreground = ${colors.bg}
format-connected-foreground = ${colors.bg}
format-connected-background = ${colors.cyn}
format-connected-padding = 2

label-disconnected = "Disconnected"
format-disconnected-prefix = " "
format-disconnected-prefix-padding = 0
format-disconnected-prefix-foreground = ${colors.bg}
format-disconnected-foreground = ${colors.bg}
format-disconnected-background = ${colors.red}
label-disconnected-padding = 2



[module/signal]
type = internal/network
interface = wlp3s0
interval = 2

label-connected = "%signal%%"
format-connected-prefix = " "
format-connected-prefix-padding = 0
format-connected-prefix-foreground = ${colors.bg}
format-connected-foreground = ${colors.bg}
format-connected-background = ${colors.grn}
format-connected-padding = 2

label-disconnected = "0"
format-disconnected-prefix = " "
format-disconnected-prefix-padding = 0
format-disconnected-prefix-foreground = ${colors.bg}
format-disconnected-foreground = ${colors.bg}
format-disconnected-background = ${colors.red}
label-disconnected-padding = 2



[module/battery]
type          = internal/battery
full-at       = 99
battery       = BAT1
adapter       = AC0
poll-interval = 5

format-charging-prefix      = " "
format-discharging-prefix   = " "
format-full-prefix          = " "

label-charging      = "%percentage%%"
label-discharging   = "%percentage%%"
label-full          = "%percentage%%"

format-charging-padding = 2
format-discharging-padding = 2
format-full-padding  = 2

format-charging-background = ${colors.grn}
format-discharging-background = ${colors.red}
format-full-background = ${colors.ylw}

format-charging-foreground = ${colors.bg}
format-discharging-foreground = ${colors.bg}
format-full-foreground = ${colors.bg}



[module/clock]
type                     = internal/date
interval                 = 1
date                     = " %a %d/%m/%y %H:%M"
format-prefix            = ""
format-padding           = 2

format-background        = ${colors.fg}
format-foreground        = ${colors.bg}
