format-disconnected-foreground        = ${colors.nord6}
format-disconnected-background        = ${colors.nord3}
format-disconnected-padding           = 2

## Previous button for mpd
[module/previous]
type      = internal/mpd
host      = 127.0.0.1
port      = 6600
icon-prev = ""

format-online            = <icon-prev>
format-online-background = ${colors.nord3}
format-online-foreground = ${colors.nord6}
format-online-padding    = 2

## filesystem storage in %
[module/filesystem]
type         = internal/fs
mount-0      = /
mount-1      = /home
interval     = 10
fixed-values = true

format-mounted   = <label-mounted>
format-unmounted = <label-unmounted>

label-mounted   = " %mountpoint% %percentage_used%%"
label-unmounted = "Not Mounted"

label-mounted-foreground = ${colors.nord6}
label-mounted-background = ${colors.nord3}

label-unmounted-foreground = ${colors.nord6}
label-unmounted-background = ${colors.nord3}

spacing               = 0
label-mounted-padding = 2

## Play button for mpd
[module/play]
type      = internal/mpd
