#!/usr/bin/env bash
#
# ~/bin/comptontoggle
#
# Authors:
#  InAbsentia <github.com/inabsencia>
#

CMPFILE=${CMPFILE:-/tmp/cmpFile}

if [ -e $CMPFILE ]; then
    compton --config ~/.config/compton/config &
    ~/bin/popup ":: compton enabled ::" 2 &
    rm $CMPFILE
else
    echo $ "dummytext" >> $CMPFILE
    ps -ef | grep "compton --config" | grep -v grep | awk '{print $2}' | xargs kill
    ~/bin/popup ":: compton disabled ::" 2 &
fi
