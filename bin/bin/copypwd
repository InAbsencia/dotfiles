#!/bin/bash

# --
# Copies password vault to NAS
# --

green=`tput setaf 2`
magenta=`tput setaf 5`
white=`tput setaf 7`
blue=`tput setaf 4`
reset=`tput sgr0`

echo "${white} :: ${magenta}Copying pwd database to NAS. ${white}::"

filenm="passwd-"
filenm+=$(date +%F)
cd $HOME
tar -cf - .password-store/  | xz -9 -c - > /tmp/$filenm.tar.xz
mv -f /tmp/$filenm.tar.xz /srv/nas/holder/pwd-backup &> /dev/null

echo
echo " :: ${magenta}Updating Git Repo on remote server ${white}:: ${reset}"
cd ~/.password-store
git push



