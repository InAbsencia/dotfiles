#!/usr/bin/env bash
mute=`pamixer --get-mute`
vol=`pamixer --get-volume`

iconmute=󰖁
ramp1=󰕿
ramp2=󰖀
ramp3=󰕾

mfg=^c#cc241d^
ifg=^c#b16286^
tfg=^d^

if [[ $mute == "true" || (( $vol == 0 )) ]]; then
    echo "$mfg$iconmute $tfg$vol%"
elif (( $vol < 33 )); then
    echo "$ifg$ramp1 $tfg$vol%"
elif (( $vol < 66 )); then
    echo "$ifg$ramp2 $tfg$vol%"
else
    echo "$ifg$ramp3 $tfg$vol%"
fi
